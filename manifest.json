{
    "action": {
        "default_icon": {
            "16": "images/favicon.ico",
            "32": "images/favicon.ico",
            "48": "images/favicon.ico",
            "128": "images/favicon.ico"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+X"
            }
        }
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://elakolije.rs/*/akcija/*"
            ]
        }
    ],
    "description": "Ova ekstenzija omogucava da sortirate proizvode na akciji po popustu na sajtu elakolije.rs u rastucem ili opadajucem redosledu.",
    "icons": {
        "16": "images/favicon.ico",
        "32": "images/favicon.ico",
        "48": "images/favicon.ico",
        "128": "images/favicon.ico"
    },
    "manifest_version": 3,
    "name": "Elakolije.rs sortiranje po popustu",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "version": "1.1.0"
}
